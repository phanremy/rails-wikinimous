<%= form_for @article do |f| %>
  <div class="form-group row">
    <%= f.label :title, class: "col-sm-2 col-form-label col-form-label-sm" %>
    <div class="col-sm-10">
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :content, class: "col-sm-2 col-form-label col-form-label-sm" %>
    <div class="col-sm-10">
      <%= f.text_area :content, class: "form-control p-6 text-area-large" %>
    </div>
  </div>

  <%= f.submit 'Fuckin post now', :class => "btn btn-success" %>
<% end %>
